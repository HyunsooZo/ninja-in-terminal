<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ninja.terminal.controller.TerminalTabController"
      fx:id="terminalContainer"
      styleClass="terminal-container">
    
    <!-- Connection Info Bar -->
    <HBox styleClass="connection-bar" alignment="CENTER_LEFT">
        <padding>
            <Insets top="8" right="15" bottom="8" left="15"/>
        </padding>
        <Label fx:id="connectionInfo" text="Not connected" styleClass="connection-info"/>
    </HBox>
    
    <!-- Terminal Area -->
    <TextArea fx:id="terminalArea" 
              VBox.vgrow="ALWAYS"
              styleClass="terminal-text-area"
              wrapText="true"/>
</VBox>
