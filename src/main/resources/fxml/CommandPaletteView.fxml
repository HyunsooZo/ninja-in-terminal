<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ninja.terminal.controller.CommandPaletteController"
      styleClass="command-palette"
      prefWidth="600"
      prefHeight="400"
      spacing="10"
      stylesheets="@../css/dark-theme.css">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="ðŸ” Command Palette" style="-fx-text-fill: #80cbc4; -fx-font-size: 14px; -fx-font-weight: bold;"/>

    <TextField fx:id="searchField"
               promptText="Search hosts..."
               styleClass="search-field"/>

    <ListView fx:id="resultListView"
              VBox.vgrow="ALWAYS"
              styleClass="result-list"/>

</VBox>
