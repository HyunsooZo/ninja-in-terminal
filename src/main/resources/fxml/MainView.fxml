<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ninja.terminal.controller.MainController"
            fx:id="rootPane"
            styleClass="root-pane">

    <top>
        <HBox styleClass="nav-bar" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.jpg"/>
                    </image>
                </ImageView>
                <Label text="Ninja-In-Terminal" styleClass="app-title"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Ready" styleClass="status-label"/>
        </HBox>
    </top>

    <center>
        <TabPane fx:id="mainTabs"
                 VBox.vgrow="ALWAYS"
                 styleClass="main-tabs"
                 tabClosingPolicy="UNAVAILABLE">

            <Tab>
                <graphic>
                    <HBox alignment="CENTER" spacing="5">
                        <Region styleClass="icon, icon-hosts"/>
                        <Label text="Hosts"/>
                    </HBox>
                </graphic>
                <fx:include source="HostsView.fxml"/>
            </Tab>

            <Tab>
                <graphic>
                    <HBox alignment="CENTER" spacing="5">
                        <Region styleClass="icon, icon-snippets"/>
                        <Label text="Snippets"/>
                    </HBox>
                </graphic>
                <fx:include source="SnippetView.fxml"/>
            </Tab>

            <Tab>
                <graphic>
                    <HBox alignment="CENTER" spacing="5">
                        <Region styleClass="icon, icon-sftp"/>
                        <Label text="SFTP"/>
                    </HBox>
                </graphic>
                <fx:include source="SftpView.fxml"/>
            </Tab>
            <Tab>
                <graphic>
                    <HBox alignment="CENTER" spacing="5">
                        <Region styleClass="icon, icon-settings"/>
                        <Label text="Settings"/>
                    </HBox>
                </graphic>
                <fx:include source="SettingsView.fxml"/>
            </Tab>
        </TabPane>
    </center>

</BorderPane>