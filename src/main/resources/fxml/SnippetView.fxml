<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ninja.terminal.controller.SnippetController"
            styleClass="snippet-view"
            stylesheets="@../css/dark-theme.css">

    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Region styleClass="icon, icon-sftp"/> 
                <Label text="Packages" style="-fx-text-fill: #80cbc4; -fx-font-weight: bold;"/>
            </HBox>
            <TreeView fx:id="snippetTree" VBox.vgrow="ALWAYS" prefWidth="250"/>
            
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Button fx:id="addPackageBtn" text="+" prefWidth="30" styleClass="action-btn-secondary"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region styleClass="icon, icon-snippets"/>
                    <Label text="Snippets" style="-fx-text-fill: #80cbc4; -fx-font-weight: bold;"/>
                </HBox>
                <ListView fx:id="snippetListView" VBox.vgrow="ALWAYS"/>
                
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Button fx:id="addSnippetBtn" text="Add Snippet" styleClass="action-btn"/>
                </HBox>
            </VBox>
            
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="titleLabel" text="" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="runBtn" text="Run" styleClass="action-btn">
                        <graphic>
                            <Region styleClass="icon, icon-play" style="-fx-min-width: 12; -fx-min-height: 12; -fx-max-width: 12; -fx-max-height: 12;"/>
                        </graphic>
                    </Button>
                    <Button fx:id="copyBtn" text="Copy" styleClass="action-btn-secondary">
                        <graphic>
                            <Region styleClass="icon, icon-copy" style="-fx-min-width: 12; -fx-min-height: 12; -fx-max-width: 12; -fx-max-height: 12;"/>
                        </graphic>
                    </Button>
                    <Button fx:id="editBtn" text="Edit" styleClass="action-btn-secondary">
                        <graphic>
                            <Region styleClass="icon, icon-edit" style="-fx-min-width: 12; -fx-min-height: 12; -fx-max-width: 12; -fx-max-height: 12;"/>
                        </graphic>
                    </Button>
                    <Button fx:id="deleteBtn" text="Delete" styleClass="action-btn-secondary">
                        <graphic>
                            <Region styleClass="icon, icon-trash" style="-fx-min-width: 12; -fx-min-height: 12; -fx-max-width: 12; -fx-max-height: 12;"/>
                        </graphic>
                    </Button>
                </HBox>
                
                <Label fx:id="descriptionLabel" text="" wrapText="true" 
                       style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                
                <Separator/>
                
                <Label text="Script:" style="-fx-text-fill: #80cbc4; -fx-font-weight: bold;"/>
                <TextArea fx:id="scriptTextArea" 
                          VBox.vgrow="ALWAYS" 
                          editable="false"
                          styleClass="script-textarea"/>
            </VBox>
        </SplitPane>
    </center>

</BorderPane>
